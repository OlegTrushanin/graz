<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTimePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/constraintCell"
            android:padding="2dp"
            android:layout_marginStart="4dp"
            android:text="Опция"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/linearBetweenCell"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimePay"
            android:background="#653D3939"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textViewCellValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearBetweenCell"
            android:padding="2dp"
            android:gravity="end"
            android:layout_marginEnd="4dp"
            android:text="Значение"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/linearAfterCell"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCellValue"
            android:background="#070707"
            android:orientation="horizontal" />





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>