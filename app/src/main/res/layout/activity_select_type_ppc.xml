<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySelectTypePPC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="Логотип"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroupFirstType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <RadioButton
                    android:id="@+id/radioButtonFirstCirclePPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ППЦС круг"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButtonFirstCirclePPCA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ППЦА круг"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButtonFirstCasePPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ППЦС чемодан"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButtonFirstChemPPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ППЦС Чемотасс"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButtonFirstPPCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ППЦБ"
                    android:visibility="visible"
                    android:textSize="24sp" />


            </RadioGroup>


            <RadioGroup
                android:id="@+id/radioGroupFirstAxes"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupFirstType"
                tools:visibility="invisible"
                >

                <RadioButton
                    android:id="@+id/radioButtonFirstAxes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="22dp"
                    android:text="3 оси"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButtonFirstAxes4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="22dp"
                    android:text="4 оси"
                    android:textSize="24sp"

                    />



                <RadioButton
                    android:id="@+id/radioButtonFirstAxes3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="22dp"
                    android:text="3+1"
                    android:textSize="24sp"


                    />


            </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupFirstAxesPPCcircle"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupFirstType"
            tools:visibility="invisible"
            >

        <RadioButton
            android:id="@+id/radioButtonFirstAxes3PPCcircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="22dp"
            android:text="3 оси"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButtonFirstAxes4PPCcircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="22dp"
            android:text="4 оси"
            android:textSize="24sp"

            />

        </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupFirstAxesSpringPneum"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="24dp"
                android:gravity="clip_horizontal"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupFirstType"
                tools:visibility="visible">

               <RadioButton
                    android:id="@+id/radioButtonFirstAxesPneum"
                   android:layout_marginStart="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="пневматика"
                    android:textSize="24sp"/>

                <RadioButton
                    android:id="@+id/radioButtonFirstPneum2"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="пневматика 2 ската"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButtonFirstKomb"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="комбинированная"
                    android:textSize="24sp" />


            </RadioGroup>

            <Spinner
                android:id="@+id/spinerFirst"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="18dp"
                android:entries="@array/spinner_FirstCirclePPC_3"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupFirstAxesSpringPneum"
                tools:visibility="visible" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonFirstHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clickable="true"
            app:maxImageSize="35dp"
            android:contentDescription="Переход на главную страницу"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.264"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinerFirst"
            app:layout_constraintVertical_bias="0.236"
            app:srcCompat="@drawable/home_black_48" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonFirstNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:maxImageSize="35dp"
            android:contentDescription="Переход на следующую страницу"
            app:srcCompat="@drawable/baseline_redo_black_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonFirstHome"
            app:layout_constraintTop_toTopOf="@+id/buttonFirstHome" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/buttonFirstNext"
            app:layout_constraintBottom_toBottomOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>



